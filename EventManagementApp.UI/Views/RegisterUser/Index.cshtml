@model EventManagementApp.UI.Models.Identity.UserSignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}


<h1>Sign Up</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.NameSurname" class="form-label">Name Surname</label>
        <input asp-for="@Model.NameSurname" class="form-control" />
        <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.UserName" class="form-label">Username</label>
        <input asp-for="@Model.UserName" class="form-control" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Mail" class="form-label">Email</label>
        <input asp-for="@Model.Mail" class="form-control" />
        <span asp-validation-for="@Model.Mail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label">Password</label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
        <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
</form>

