@model EventManagementApp.UI.Models.Identity.UserSignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<h1>Sign In</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="@Model.UserName" class="form-label">Username</label>
        <input asp-for="@Model.UserName" class="form-control" />
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label">Password</label>
        <input asp-for="@Model.Password" type="password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign In</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}