@* @model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> *@
@using EventManagementApp.Data.Entities
@model List<AppRole>
@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

<p>
    <a asp-action="AddRole" class="btn btn-primary">Add New Role</a>
    <a asp-action="UserRoleList" class="btn btn-primary">User Role List</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@role.Id" class="btn btn-sm btn-warning">Edit</a>
                    @* bakılacak *@
                    <a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this role?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}